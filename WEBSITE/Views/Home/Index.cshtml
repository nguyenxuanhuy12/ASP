@model WEBSITE.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
}


<div class="hero-slide owl-carousel site-blocks-cover">
    <div class="intro-section" style="background-image: url('~/Content/images/hero_1.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                    <h1>SmartPhone Gaming</h1>
                </div>
            </div>
        </div>
    </div> 

    <div class="intro-section" style="background-image: url('~/Content/images/hero_1.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                    <h1>King of gaming </h1>
                </div>
            </div>
        </div>
    </div>

</div>


<div></div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-4 mb-5">
                <h2 class="section-title-underline mb-5">
                    <span>Danh mục</span>
                </h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.ListCategory)
            {
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">

                    <div class="feature-1 border">
                        <div class="icon-wrapper bg-primary">
                            <span class="<flaticon-mortarboard text-white"></span>
                        </div>
                        <div class="feature-1-content">
                            <h2>Điện Thoại Chuyên Gaming</h2>
                            <p>@item.Description</p>
                            <p>@Html.ActionLink(item.Name, "ProductCategory", "Category", new { @Id = item.id }, null)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<div class="site-section">
    <div class="container">


        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-6 mb-5">
                <h2 class="section-title-underline mb-3">
                    <span>Sản Phẩm </span>
                </h2>
                <p>Những sản phẩm được tìm kiếm phổ biến.</p>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="owl-slide-3 owl-carousel">
                    @foreach (var item in Model.ListProduct)
                    {

                        <div class="course-1-item">
                            <figure class="thumnail">
                                <a href="@Url.Action("Detail","Product", new { Id = item.id})"><img src="~/Content/images/@item.Avatar" alt="Image" class="img-fluid"></a>
                                <div class="price">@item.Price VNĐ</div>
                                <div class="category"><h3>@item.Name</h3></div>
                            </figure>
                            <div class="course-1-content pb-4">
                                <h2>Chất Lượng Của Sản Phẩm</h2>
                                <div class="rating text-center mb-3">
                                    <span class="icon-star2 text-warning"></span>
                                    <span class="icon-star2 text-warning"></span>
                                    <span class="icon-star2 text-warning"></span>
                                    <span class="icon-star2 text-warning"></span>
                                    <span class="icon-star2 text-warning"></span>
                                </div>
                                <p class="desc mb-4">@item.Mota</p>
                                <p><a href="@Url.Action("Detail","Product", new { Id = item.id})" class="btn btn-primary rounded-0 px-4">Mua Hàng</a></p>
                            </div>
                        </div>






                    }
                </div>
                </div>
            </div>



    </div>
</div>





<div class="site-section ftco-subscribe-1" style="background-image: url('~/Content/images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h2>Phản Hồi Về Chúng Tôi!</h2>
                <p>Những Vấn Đề Bạn Cảm Thấy Chưa Hài Lòng</p>
            </div>
            <div class="col-lg-5">
                <form action="" class="d-flex">
                    <input type="text" class="rounded form-control mr-2 py-3" placeholder="Nhập Email">
                    <button class="btn btn-primary rounded py-3 px-4" type="submit">Gửi</button>
                </form>
            </div>
        </div>
    </div>
</div>

